{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noEmit": true,
    "strict": true,
    "lib": [ "es2015", "esnext.bigint" ],
    "experimentalDecorators": true,
    "removeComments": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
