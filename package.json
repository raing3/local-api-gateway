{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna exec -- npm run build --silent --if-present",
    "build:watch": "lerna exec --parallel -- npm run build:watch --silent --if-present",
    "lint": "lerna exec --no-bail -- npm run lint --silent",
    "lint:fix": "lerna exec --no-bail -- npm run lint:fix --silent",
    "postinstall": "lerna bootstrap --ci"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
